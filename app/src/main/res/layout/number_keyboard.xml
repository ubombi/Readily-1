<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/box"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/txt_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txt_pay_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#E066FF"
            android:hint="请输入："
            android:paddingLeft="10dp"
            android:textColor="#416961"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_7"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="9" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_t"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="." />

        <Button
            android:id="@+id/btn_0"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/btn_d"
            style="@style/btn_input_amount_style"
            android:text="del"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_num_no"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:background="#E066FF"
            android:hint="取消" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c8cbcc" />

        <Button
            android:id="@+id/btn_num_ok"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
            android:background="#E066FF"
            android:hint="确定" />
    </LinearLayout>
</LinearLayout>